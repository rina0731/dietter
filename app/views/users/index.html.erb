<h1>管理者側のユーザー一覧ページ</h1>

  <%= search_form_for @search do |f| %>
    <div>
      <%= f.label :name_cont, "Name" %>
      <%= f.text_field :name_cont %>
    </div>
    <div class="actions"><%= f.submit "検索" %></div>
    <br>
    <br>
  <% end %>

  <% @users.each do |user| %>
    <div class="users-box">
	    <h3>名前：<%= user.name %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "詳細", user_path(user.id) %>
      </h3>
      <br>
      <br>
    </div>
  <% end %>

  <div class="paginate">
     <%= paginate @users %>
  </div>